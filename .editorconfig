root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{md, markdown}]
trim_trailing_whitespace = false

[{__tests__, src}/**.{js, ts, json}]
indent_style = space
indent_size = 2

[configure]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8
